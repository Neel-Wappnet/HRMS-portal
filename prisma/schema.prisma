// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  empCode  String @db.Char(100)
  email    String @db.Char(150)
  password String @db.Char(150)
}

model LeaveMaster {
  id           Int @id @default(autoincrement())
  employeeId   Int
  leaveBalance Int
}

model Leave {
  id          Int      @id @default(autoincrement())
  empCode     String   @db.Char(100)
  subject     String   @db.Char(255)
  startDate   DateTime
  endDate     DateTime
  leaveReason String   @db.Char(100)
  approved    Boolean  @default(false)
}

model Holiday {
  id         Int      @id @default(autoincrement())
  title      String   @db.Char(40)
  startDate  DateTime
  endDate    DateTime
  isOptional Boolean  @default(false)
  status     String
}

model Employee {
  id            Int      @id @default(autoincrement())
  empCode       String   @db.Char(100)
  name          String   @db.Char(70)
  email         String   @db.Char(150)
  departmentId  Int
  role          String
  designation   String
  birthDate     DateTime
  reportingUser String
  profileImage  String
  contactNo     Int
  address       String
}

model Department {
  id       Int    @id @default(autoincrement())
  deptName String @db.Char(70)
}
